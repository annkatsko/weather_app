import requests
import json
import argparse


api_key = 'a488843f82be53b9e7cd32ac32efc685'
url = 'https://api.openweathermap.org/data/2.5/weather'

parser = argparse.ArgumentParser(
    prog='Weather Script',
    description='Forecasting program. This program can show weather in any city',
    epilog='(c) Ann Katsko'

)

parser.add_argument('-c','--city', required=True, help='You should type city to know weather forecast')
args = parser.parse_args()
city = args.city
data = requests.get(url, params={'q': city, 'appid': api_key}).json()
if args.city:
    print(f'Temperature is' + str(round(data['main']['temp'] - 273.15)) + ' °С.')